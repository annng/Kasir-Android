<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.artevak.kasirpos">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PenjualanKasir"
        android:usesCleartextTraffic="true"
        tools:replace="android:icon">
        <activity
            android:name="com.artevak.kasirpos.activity.DetailHutangActivity"
            android:exported="false" />
        <activity
            android:name="com.artevak.kasirpos.activity.HistoryTransaksiActivity"
            android:exported="true" />
        <activity
            android:name="com.artevak.kasirpos.activity.TambahHutangSayaActivity"
            android:exported="true" />
        <activity
            android:name="com.artevak.kasirpos.activity.TambahHutangActivity"
            android:exported="false" />
        <activity
            android:name="com.artevak.kasirpos.activity.SelectPelangganActivity"
            android:exported="false" />
        <activity
            android:name="com.artevak.kasirpos.activity.UbahBarangActivity"
            android:exported="true" />
        <activity
            android:name="com.artevak.kasirpos.activity.DetailBarangActivity"
            android:exported="false" />
        <activity
            android:name="com.artevak.kasirpos.activity.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.artevak.kasirpos.activity.ProfileActivity"
            android:exported="true" />
        <activity
            android:name="com.artevak.kasirpos.activity.TambahPelangganActivity"
            android:exported="false" />
        <activity
            android:name="com.artevak.kasirpos.activity.TambahBarangActivity"
            android:exported="true" />
        <activity
            android:name="com.artevak.kasirpos.activity.HomeActivity"
            android:exported="true"
            android:label="@string/title_activity_home" />
        <activity
            android:name="com.artevak.kasirpos.activity.RegisterActivity"
            android:exported="true" />
        <activity
            android:name="com.artevak.kasirpos.MainActivity"
            android:exported="true" />
    </application>

</manifest>
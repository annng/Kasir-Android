<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.artevak.kasirpos">

    <uses-feature android:name="android.hardware.bluetooth" android:required="true"/>
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN"
        android:usesPermissionFlags="neverForLocation"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PenjualanKasir"
        android:usesCleartextTraffic="true"
        tools:replace="android:icon,android:allowBackup">
        <activity
            android:name=".ui.activity.transaction.print.TransactionPrintActivity"
            android:exported="false" />
        <activity
            android:name="com.artevak.kasirpos.ui.activity.debt.DetailHutangActivity"
            android:exported="false" />
        <activity
            android:name="com.artevak.kasirpos.ui.activity.transaction.HistoryTransaksiActivity"
            android:exported="true" />
        <activity
            android:name="com.artevak.kasirpos.ui.activity.debt.TambahHutangSayaActivity"
            android:exported="true" />
        <activity
            android:name="com.artevak.kasirpos.ui.activity.debt.TambahHutangActivity"
            android:exported="false" />
        <activity
            android:name="com.artevak.kasirpos.ui.activity.customer.SelectPelangganActivity"
            android:exported="false" />
        <activity
            android:name="com.artevak.kasirpos.ui.activity.item.UbahBarangActivity"
            android:exported="true" />
        <activity
            android:name="com.artevak.kasirpos.ui.activity.item.DetailBarangActivity"
            android:exported="false" />
        <activity
            android:name="com.artevak.kasirpos.ui.activity.splash.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.artevak.kasirpos.ui.activity.profile.ProfileActivity"
            android:exported="true" />
        <activity
            android:name="com.artevak.kasirpos.ui.activity.customer.TambahPelangganActivity"
            android:exported="false" />
        <activity
            android:name="com.artevak.kasirpos.ui.activity.item.TambahBarangActivity"
            android:exported="true" />
        <activity
            android:name="com.artevak.kasirpos.ui.activity.HomeActivity"
            android:exported="true"
            android:label="@string/title_activity_home" />
        <activity
            android:name="com.artevak.kasirpos.ui.activity.auth.RegisterActivity"
            android:exported="true" />
        <activity
            android:name="com.artevak.kasirpos.ui.activity.auth.LoginActivity"
            android:exported="true" />
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.artevak.kasirpos">

    <uses-feature
        android:name="android.hardware.bluetooth"
        android:required="true" />

    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
    <uses-permission
        android:name="android.permission.BLUETOOTH_SCAN"
        android:usesPermissionFlags="neverForLocation" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <application
        android:name=".app.MyApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PenjualanKasir"
        android:usesCleartextTraffic="true"
        tools:replace="android:icon,android:allowBackup">
        <activity
            android:name=".ui.activity.web.WebMarkDownActivity"
            android:exported="false" />

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="${applicationId}.androidx-startup"
            android:exported="false"
            tools:node="remove" />

        <activity
            android:name=".ui.activity.profile.edit.ProfileEditActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.transaction.print.TransactionPrintActivity"
            android:exported="false" />
        <activity
            android:name="com.artevak.kasirpos.ui.activity.debt.DetailHutangActivity"
            android:exported="false" />
        <activity
            android:name="com.artevak.kasirpos.ui.activity.transaction.history.HistoryTransaksiActivity"
            android:exported="true" />
        <activity
            android:name="com.artevak.kasirpos.ui.activity.debt.TambahHutangSayaActivity"
            android:exported="true" />
        <activity
            android:name="com.artevak.kasirpos.ui.activity.debt.TambahHutangActivity"
            android:exported="false" />
        <activity
            android:name="com.artevak.kasirpos.ui.activity.customer.select.SelectPelangganActivity"
            android:exported="false" />
        <activity
            android:name="com.artevak.kasirpos.ui.activity.item.edit.UbahBarangActivity"
            android:exported="true" />
        <activity
            android:name="com.artevak.kasirpos.ui.activity.item.detail.DetailBarangActivity"
            android:exported="false" />
        <activity
            android:name="com.artevak.kasirpos.ui.activity.splash.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.artevak.kasirpos.ui.activity.profile.view.ProfileActivity"
            android:exported="true" />
        <activity
            android:name="com.artevak.kasirpos.ui.activity.customer.add.TambahPelangganActivity"
            android:exported="false" />
        <activity
            android:name="com.artevak.kasirpos.ui.activity.item.add.TambahBarangActivity"
            android:exported="true" />
        <activity
            android:name="com.artevak.kasirpos.ui.activity.HomeActivity"
            android:exported="true"
            android:label="@string/title_activity_home" />
        <activity
            android:name="com.artevak.kasirpos.ui.activity.auth.register.RegisterActivity"
            android:exported="true" />
        <activity
            android:name="com.artevak.kasirpos.ui.activity.auth.login.LoginActivity"
            android:exported="true" />
    </application>

</manifest>
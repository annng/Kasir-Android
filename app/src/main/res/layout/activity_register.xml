<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.auth.RegisterActivity">

    <RelativeLayout
        android:id="@+id/relaToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="5dp"
        android:padding="8dp">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:tint="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/ivBack"
            android:orientation="vertical"
            android:padding="@dimen/margin_extra_small"
            android:paddingHorizontal="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="@font/cera_black"
                android:text="@string/title_toolbar_register_account"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />


        </LinearLayout>


    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relaToolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relaToolbar"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_medium">


                    <com.artevak.kasirpos.widget.CustomEditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:inputType="text"
                        app:titleEditText="@string/hint_email" />

                    <com.artevak.kasirpos.widget.CustomEditText
                        android:id="@+id/etNamaPemilik"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:inputType="person"
                        app:titleEditText="@string/hint_owner_name" />

                    <com.artevak.kasirpos.widget.CustomEditText
                        android:id="@+id/etNamaUmkm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:inputType="person"
                        app:titleEditText="@string/hint_shop_name" />


                    <com.artevak.kasirpos.widget.CustomEditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:inputType="password"
                        app:suffixIcon="@drawable/ic_show"
                        app:titleEditText="@string/hint_password" />

                    <com.artevak.kasirpos.widget.CustomEditText
                        android:id="@+id/etCPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:inputType="password"
                        app:suffixIcon="@drawable/ic_show"
                        app:titleEditText="@string/hint_confirmation_password" />


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnDaftar"
                        style="@style/ButtonPrimary"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/margin_large"
                        android:layout_height="wrap_content"
                        android:text="@string/action_register" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</RelativeLayout>